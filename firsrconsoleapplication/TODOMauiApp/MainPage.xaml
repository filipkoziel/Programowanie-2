<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TODOMauiApp.MainPage"
             xmlns:data="clr-namespace:TODOMauiApp.Data"
             x:Name="thisPage"
             BindingContext="{x:Reference thisPage}">

    <ContentPage.Resources>
        <data:boolToColorConverter x:Key="boolToColorConverter" />
    </ContentPage.Resources>

    <StackLayout Orientation="Vertical">
        <Label Text="Lista zadań" FontSize="Large"/>
        <CollectionView ItemsSource="{Binding TaskCollection}"
                        SelectionMode="Single"
                        SelectedItem="{Binding SelectedTask}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Orientation="Horizontal">
                        <Label Text="{Binding Title}" TextColor="{Binding IsCompleted, Converter={StaticResource boolToColorConverter}}" LineHeight="2"/>
                        <CheckBox IsChecked="{Binding IsCompleted}"/>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>
