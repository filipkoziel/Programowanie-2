<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="INF04_2023_01.MainPage"
             x:Name="thisPage"
             BackgroundColor="LightSteelBlue"
             BindingContext="{x:Reference thisPage}">

    <VerticalStackLayout>
        <Grid ColumnDefinitions="*,*" RowDefinitions="auto" Padding="40" ColumnSpacing="80">
            <Label Text="Dane pracownika" BackgroundColor="LightSteelBlue" Grid.Column="0" VerticalOptions="Start" HorizontalOptions="Start" ZIndex="1" Margin="10,-15,0,0" Padding="5"/>

            <Border Stroke="White" StrokeThickness="3" StrokeShape="RoundRectangle 5,5,5,5" Grid.Column="0">
                <VerticalStackLayout Margin="30">
                
                    <Grid ColumnDefinitions="auto,*" RowDefinitions="auto,auto,auto">
                        <Label Text="Imię" Grid.Column="0" Grid.Row="0" VerticalOptions="Center" HorizontalOptions="Start" Margin="0,0,10,0"/>
                        <Entry Text="{Binding Name}" Grid.Column="1" Grid.Row="0" VerticalOptions="Center" BackgroundColor="White"/>

                        <Label Text="Nazwisko" Grid.Column="0" Grid.Row="1" VerticalOptions="Center" HorizontalOptions="Start" Margin="0,0,10,0"/>
                        <Entry Text="{Binding Surname}" Grid.Column="1" Grid.Row="1" VerticalOptions="Center" BackgroundColor="White"/>

                        <Label Text="Stanowisko" Grid.Column="0" Grid.Row="2" VerticalOptions="Center" HorizontalOptions="Start" Margin="0,0,10,0"/>
                        <Picker ItemsSource="{Binding PositionCollection}" SelectedItem="{Binding SelectedPosition}" Grid.Column="1" Grid.Row="2" VerticalOptions="Center" BackgroundColor="White"/>
                    </Grid>
                
                </VerticalStackLayout>
            </Border>

            <Label Text="Generowanie hasła" BackgroundColor="LightSteelBlue" Grid.Column="1" VerticalOptions="Start" HorizontalOptions="Start" ZIndex="1" Margin="10,-15,0,0" Padding="5"/>

            <Border Stroke="White" StrokeThickness="3" StrokeShape="RoundRectangle 5,5,5,5" Grid.Column="1">
                <VerticalStackLayout Margin="30">

                    <Grid ColumnDefinitions="auto,*">
                        <Label Text="Ile znaków?" Grid.Column="0" VerticalOptions="Center" HorizontalOptions="Start" Margin="0,0,10,0"/>
                        <Entry Text="{Binding CharacterNumber}" Grid.Column="1" VerticalOptions="Center" BackgroundColor="White"/>
                    </Grid>

                    <HorizontalStackLayout>
                        <CheckBox IsChecked="{Binding IsCheckedLetters}" VerticalOptions="Center" HorizontalOptions="Start"/>
                        <Label Text="Małe i wielkie litery" VerticalOptions="Center" HorizontalOptions="Start"/>
                    </HorizontalStackLayout>

                    <HorizontalStackLayout>
                        <CheckBox IsChecked="{Binding IsCheckedNumbers}" VerticalOptions="Center" HorizontalOptions="Start"/>
                        <Label Text="Cyfry" VerticalOptions="Center" HorizontalOptions="Start"/>
                    </HorizontalStackLayout>

                    <HorizontalStackLayout>
                        <CheckBox IsChecked="{Binding IsCheckedSpecial}" VerticalOptions="Center" HorizontalOptions="Start"/>
                        <Label Text="Znaki specjalne" VerticalOptions="Center" HorizontalOptions="Start"/>
                    </HorizontalStackLayout>

                    <Button Text="Generuj hasło" Command="{Binding GeneratePassword}" HorizontalOptions="Center" BackgroundColor="SteelBlue"/>

                </VerticalStackLayout>
            </Border>
        
        </Grid>

        <Button Text="Zatwierdź" Command="{Binding ShowPasswordInfo}" HorizontalOptions="Center" BackgroundColor="SteelBlue"/>
    </VerticalStackLayout>
</ContentPage>
